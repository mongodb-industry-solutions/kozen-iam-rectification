  "description": "Module for the Kozen framework that includes support for running the IAM rectification process",
  "dependencies": {
    "@mongodb-solution-assurance/iam-util": "^1.0.3",
    "@mongodb-solution-assurance/kozen": "^1.0.6"
  },
  "devDependencies": {
